{% extends "html.twig" %}

{% block content %}
<div x-data="{ items: [] }"
@fetch="const response = await fetch(`/api/v1/projects/fetch`);
if(response) {
  items = await response.json();
}" x-init="$nextTick(() => $dispatch(`fetch`))">
  <h3>projects</h3>
  <div class="project-posts">
    <template x-for="(item, index) in items">
      <a href="/sdsads">
        <div class="post-image">
          <img :alt="item.name" class="post-image-src" :src="item.thumbnail">
        </div>
        {# <div class="post-details">
          <div class="post-title" x-text="`${item.name}`"></div>
        </div> #}
        <div class="post-detailed-hover">
          <div class="post-title" x-text="`${item.name}`"></div>
          <div x-text="item.description"></div>
        </div>
      </a>
    </template>
  </div>
</div>
{% endblock %}